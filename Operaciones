package operadoresaritmeticos;
  //@author Alumno Edward Rodrigo Uriarte Anccota
public class OperadoresAritmeticos {

    public static void main(String[] args) {
        // TODO code application logic here
        int VariableUno = 50;
        int VariableDos = 20;
        //Asiganar Valores a Operaciones Aritmeticas
        int Multiplicacion =  VariableUno * VariableDos;
        double Divicion  = VariableUno / VariableDos;
        int Suma = VariableUno + VariableDos;
        int Resta = VariableUno  - VariableDos;
        int Modulo = VariableUno % VariableDos;
        //Incremento o //VariableUno = VariableUno +1;
        VariableUno ++;
        System.out.println("Incremento: " + VariableUno);
        //Decremento o  //VariableDos = VariableDos -1;
        VariableDos --;
        System.out.println("Decremento: " + VariableDos);
        
        //Multiplicacion
        System.out.println("Multiplicacion : " + Multiplicacion);
        //Divicion
        System.out.println("Divicion: " + Divicion);
        // Suma 
        System.out.println("Suma : " + Suma);
        // Resta
        System.out.println("Resta : " + Resta);
        //Modulo
        System.out.println("Modulo: " + Modulo);
    }
}
